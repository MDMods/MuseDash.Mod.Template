{
  "$schema": "http://json.schemastore.org/template",
  "author": "lxy",
  "classifications": [
    "Muse Dash",
    "Mod",
    "Library"
  ],
  "identity": "MuseDash.Mod.CSharp.Windows",
  "name": "MuseDash Mod",
  "shortName": "musedashmod",
  "tags": {
    "language": "C#",
    "type": "project",
    "platform": "Windows"
  },
  "sourceName": "MuseDashModTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "Setting": {
      "type": "parameter",
      "datatype": "choice",
      "allowMultipleValues": false,
      "description": "Options for generating a setting class for the mod",
      "choices": [
        {
          "choice": "MelonLoader",
          "description": "Use MelonPrefernces for setting"
        },
        {
          "choice": "Tomlet",
          "description": "Use Tomlet directly for setting"
        },
        {
          "choice": "None",
          "description": "Do not generate a setting class for the mod"
        }
      ],
      "defaultValue": "None"
    },
    "MelonSetting": {
      "type": "computed",
      "value": "(Setting == \"MelonLoader\")"
    },
    "TomletSetting": {
      "type": "computed",
      "value": "(Setting == \"Tomlet\")"
    },
    "NoSetting": {
      "type": "computed",
      "value": "(Setting == \"None\")"
    },
    "Patching": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Whether to generate a patching class for the mod"
    }
  },
  "sources": [
    {
      "exclude": [
        ".idea/**/*",
        ".template.config/**/*",
        "bin/**/*",
        "obj/**/*"
      ],
      "modifiers": [
        {
          "condition": "(MelonSetting)",
          "exclude": [
            "Data.cs"
          ],
          "include": [
            "SettingManager.cs"
          ]
        },
        {
          "condition": "(TomletSetting)",
          "include": [
            "Data.cs",
            "SettingManager.cs"
          ]
        },
        {
          "condition": "(NoSetting)",
          "exclude": [
            "Data.cs",
            "SettingManager.cs"
          ]
        },
        {
          "condition": "(!Patching)",
          "exclude": [
            "Patches/**/*"
          ]
        }
      ]
    }
  ]
}